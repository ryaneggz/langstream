{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI: Debug with Uvicorn",
            "type": "debugpy",
            "request": "launch",
            "module": "uvicorn",
            "args": ["src.langstream.__main__:app", "--host", "0.0.0.0", "--port", "8000"],
            "console": "integratedTerminal",
            "justMyCode": false,
            "cwd": "${workspaceFolder}",
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        }
    ]
}
